    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "strict": true,
    "sourceMap": true,
    "outDir": "./dist",
    "declaration": true
  },
  "include": [
